// Exemplo de uso adequado dos módulos com namespaces

// Imports específicos - apenas o que você precisa
using Core.Types;
using IO.Console;
using IO.FileSystem;
using System.Environment;

// Agora você pode usar as classes diretamente
print("=== Exemplo de Uso com Namespaces ===");

// Usar Types para verificação de tipos
let value = "Hello World";
let isString = Types.isString(value);
Console.println("Value is string: " + isString);

// Usar Console para output
Console.println("This is from IO.Console");

// Usar FileSystem para operações de arquivo
let fileExists = FileSystem.fileExists("test.txt");
Console.println("File exists: " + fileExists);

// Usar Environment para variáveis de ambiente
let path = Environment.get("PATH");
Console.println("PATH variable retrieved");

print("=== Namespace usage completed ===");
