// Test error cases for static methods

class ErrorTestClass {
    let instanceField;
    
    public fun constructor(value) {
        this.instanceField = value;
    }
    
    // Valid static method
    public static fun validStatic() {
        return "This is valid";
    }
    
    // Instance method
    public fun instanceMethod() {
        return this.instanceField;
    }
}

// Test valid static method call
let result1 = ErrorTestClass.validStatic();
print(result1);

// Test valid instance method call
let obj = new ErrorTestClass(100);
let result2 = obj.instanceMethod();
print(result2);

print("Valid calls work correctly!");

